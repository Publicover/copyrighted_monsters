<center>

<br>

<h1> ALL THE LOCATIONS </h1>

<table>
  <tr>
    <th>Address</th>
    <th>Name</th>
    <th>City</td>
    <th>State</td>
    <th>Checkpoint</th>
  </tr>

  <% @locations.each do |location| %>
    <tr>
      <td><%= location.address %></td>
      <td><%= location.name %></td>
      <td><%= location.city %></td>
      <td><%= location.state %></td>
      <td><%= location.checkpoint %></td>
      <td><%= link_to 'SHOW', location_path(location) %></td>
      <td><%= link_to 'EDIT', edit_location_path(location) %></td>
      <td><%= link_to 'Destroy', location_path(location),
              method: :delete,
              data: { confirm: "OK, well, be careful, I guess" } %> </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to "HOME", root_path %> |
<%= link_to "GOT A NEW LOCATION?", new_location_path %>

</center>
